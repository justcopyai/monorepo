[template]
name = "justcopy-fullstack-skeleton"
title = "JustCopy.ai Fullstack Skeleton"
description = "Pre-built fullstack template with Express.js backend (SQLite + JWT) and Next.js frontend (React 18 + Tailwind)"
dockerfile = "e2b.Dockerfile"

[template.metadata]
version = "1.0.0"
stack = "fullstack"
backend = "Express.js + SQLite + JWT Auth"
frontend = "Next.js 14 + React 18 + Tailwind CSS"
ports = ["3000", "3001"]
features = [
    "JWT Authentication",
    "SQLite Database", 
    "CRUD Operations",
    "User Management",
    "Responsive UI",
    "TypeScript Support"
]

[template.env]
NODE_ENV = "development"
PORT = "3001"
JWT_SECRET = "development-secret-key"
DATABASE_PATH = "./database.sqlite"

[template.commands]
start_backend = "cd backend && npm start"
start_frontend = "cd frontend && npm run dev"
start_both = "/home/user/start-fullstack.sh"
build_frontend = "cd frontend && npm run build"
test = "echo 'No tests configured'"